<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox styleClass="dialog-pane" 
    stylesheets="@payroll-export-dialog.css,@../../styles/dialog.css,@../../styles/main.css" 
    spacing="15" 
    xmlns="http://javafx.com/javafx/22" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="sms.admin.app.payroll.dialog.PayrollExportDialogController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label text="Export Payroll Report" styleClass="dialog-header" />

    <VBox spacing="10">
        <Label text="Select Date Range" styleClass="section-header" />
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="From:" />
            <ComboBox fx:id="startMonthCombo" prefWidth="200" styleClass="header-combo-box" />
        </HBox>
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="To:" />
            <ComboBox fx:id="endMonthCombo" prefWidth="200" styleClass="header-combo-box" />
        </HBox>

        <Label fx:id="errorLabel" styleClass="error-label" />
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" styleClass="secondary-button" />
        <Button fx:id="exportButton" text="Export" styleClass="primary-button" />
    </HBox>
</VBox>
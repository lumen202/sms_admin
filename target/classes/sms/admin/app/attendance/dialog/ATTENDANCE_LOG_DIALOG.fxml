<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="contentBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="sms.admin.app.attendance.dialog.AttendanceLogDialogController"
      prefHeight="500.0" prefWidth="700" spacing="8" styleClass="attendance-log-dialog">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    
    <VBox spacing="5" prefHeight="40" styleClass="info-section">
        <HBox spacing="10">
            <Label styleClass="label-caption" text="Student:" />
            <Label fx:id="studentNameLabel" styleClass="label-value" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox spacing="10">
            <Label styleClass="label-caption" text="Date:" />
            <Label fx:id="dateLabel" styleClass="label-value" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>
    
    <VBox VBox.vgrow="ALWAYS" styleClass="section-pane" spacing="5">
        <padding>
            <Insets top="5" right="5" bottom="5" left="5" />
        </padding>
        <Label styleClass="section-header" text="Monthly Attendance Log" />
        <TableView fx:id="logTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" minWidth="80" maxWidth="80" prefWidth="80" text="Date" />
                <TableColumn text="Morning Session">
                    <columns>
                        <TableColumn fx:id="timeInAMColumn" minWidth="140" prefWidth="140" text="Time-In (7:30)" />
                        <TableColumn fx:id="timeOutAMColumn" minWidth="140" prefWidth="140" text="Time-Out (11:30)" />
                    </columns>
                </TableColumn>
                <TableColumn text="Afternoon Session">
                    <columns>
                        <TableColumn fx:id="timeInPMColumn" minWidth="140" prefWidth="140" text="Time-In (1:00)" />
                        <TableColumn fx:id="timeOutPMColumn" minWidth="140" prefWidth="140" text="Time-Out (4:30)" />
                    </columns>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <HBox alignment="CENTER_RIGHT" spacing="10" prefHeight="35">
        <Button fx:id="closeButton" onAction="#handleClose" text="Close" styleClass="primary-button" />
    </HBox>
</VBox>

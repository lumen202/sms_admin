<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="contentBox" styleClass="attendance-log-dialog" spacing="10"
      xmlns="http://javafx.com/javafx/22" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sms.admin.app.attendance.dialog.AttendanceLogDialogController">
    
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>
    
    <HBox spacing="10">
        <Label text="Student:" styleClass="label-caption"/>
        <Label fx:id="studentNameLabel"/>
        <Label text="Date:" styleClass="label-caption">
            <HBox.margin>
                <Insets left="20"/>
            </HBox.margin>
        </Label>
        <Label fx:id="dateLabel"/>
    </HBox>
    
    <TitledPane text="Morning (AM)" expanded="true">
        <TableView fx:id="amLogTable">
            <columns>
                <TableColumn fx:id="timeInAMColumn" text="Time-In" prefWidth="120"/>
                <TableColumn fx:id="timeOutAMColumn" text="Time-Out" prefWidth="120"/>
            </columns>
        </TableView>
    </TitledPane>
    
    <TitledPane text="Afternoon (PM)" expanded="true">
        <TableView fx:id="pmLogTable">
            <columns>
                <TableColumn fx:id="timeInPMColumn" text="Time-In" prefWidth="120"/>
                <TableColumn fx:id="timeOutPMColumn" text="Time-Out" prefWidth="120"/>
            </columns>
        </TableView>
    </TitledPane>
    
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="closeButton" text="Close" onAction="#handleClose" 
                styleClass="secondary-button"/>
    </HBox>
</VBox>
